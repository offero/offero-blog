{
  "version": 2,
  "name": "offero.tech",
  "alias": "offero.tech",
  "builds": [
    {
      "src": "www/next.config.js",
      "use": "@now/next"
    },
    {
      "src": "api/index.js",
      "use": "@now/node"
    }
  ],
  "routes": [
    {
      "src": "/api/.*",
      "dest": "api/index.js",
      "methods": [
        "GET",
        "POST",
        "PUT",
        "DELETE",
        "OPTIONS"
      ]
    },
    {
      "src": "/(.*)",
      "dest": "www/$1"
    }
  ],
  "env": {
    "AUTH_DOMAIN": "@auth-domain",
    "AUTH_CLIENT_ID": "@auth-client-id",
    "AUTH_AUDIENCE": "@auth-audience",
    "MONGO_URL": "@mongo-url"
  },
  "build": {
    "env": {
      "AUTH_DOMAIN": "@auth-domain",
      "AUTH_CLIENT_ID": "@auth-client-id",
      "AUTH_AUDIENCE": "@auth-audience"
    }
  }
}