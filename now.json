{
  "version": 2,
  "name": "offero.tech",
  "builds": [
    {
      "src": "www/package.json",
      "use": "@now/next"
    },
    {
      "src": "api/*.js",
      "use": "@now/node"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "api/$1"
    },
    {
      "src": "/(.*)",
      "dest": "www/$1"
    }
  ],
  "env": {
    "AUTH_DOMAIN": "@auth-domain",
    "AUTH_CLIENT_ID": "@auth-client-id",
    "AUTH_AUDIENCE": "@auth-audience",
    "MONGO_URL": "@mongo-url"
  },
  "build": {
    "env": {
      "AUTH_DOMAIN": "@auth-domain",
      "AUTH_CLIENT_ID": "@auth-client-id",
      "AUTH_AUDIENCE": "@auth-audience"
    }
  }
}